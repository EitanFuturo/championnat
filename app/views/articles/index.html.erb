
  <h1 class="title" >Listing articles</h1>

  <div class="navbar is-dark">
    <%= link_to 'New article', new_article_path, class: 'subtitle link'%>
  </div>

  <table>

    <tr class="columns">
      <th class="column">Title</th>
      <th class="column">Text</th>
      <th colspan="2"></th>
    </tr>

    <% @articles.each do |article| %>
      <tr class="columns">
        <td class="column is-half"><%= article.title %></td>
        <td class="column is-half"><%= article.text %></td>
        <td class="column is-one-quarter link"><%= link_to 'Show', article_path(article) %></td>
        <td class="column is-one-quarter link"><%= link_to 'Edit', edit_article_path(article) %></td>
        <td class="column is-one-quarter link"><%= link_to 'Destroy', article_path(article),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
