doctype html
html
  head
    title.main-title Championnat
    = csrf_meta_tags
    = csp_meta_tag
    link rel="icon" type="image/png" href="/assets/logo.jpg"

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

    link href="../../assets/stylesheets/application.css" rel="stylesheet"
    script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"

  body#body
    nav.navbar.is-dark
      .navbar-brand
        .navbar-item style="width: 50px;"
          figure.image
            = image_tag "logo.jpg", class: "is-rounded"
      | &nbsp;
      - if user_signed_in?
        - if current_user.admin?
          .navbar-menu
            .buttons
              = link_to 'Dashboard', admin_championships_admin_view_path, class: "button is-dark"
              = link_to 'Textos', articles_path, class: "button is-dark"

      .navbar-end
        .navbar-item
          .buttons
            = link_to 'Cerrar sesi√≥n', destroy_user_session_path, method: :delete, class: "button is-dark"
            = link_to 'Login', new_user_session_path, class: "button is-dark"

  p.notice
    = notice
  p.alert
    = alert

    = yield
